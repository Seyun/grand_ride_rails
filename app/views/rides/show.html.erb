<div data-role="header">
	<p id="notice">
		<%= notice %>
	</p>
</div>
<div data-role="content">
	<img src="<%= raw @map_url %>" />
	<br/>

	<% @ride.ride_monitors.each do |monitor| %>
	<p>
		<b>Monitor:</b>
		<%= monitor.email %>
	</p>
	<% end %>
	<br/>

    <% javascript_tag do %>
    function timedRefresh(timeoutPeriod) {
      //alert('refresh')
    	setTimeout("location.reload(true);",timeoutPeriod);
    }
    timedRefresh(1000);
    <% end %>
    
	<% @ride.tracks.each do |track| %>
	<p>
		<b>Time:</b>
		<%= track.created_at %>
		<br/>
		<b>Latitude:</b>
		<%= track.latitude %>
		<br/>
		<b>Longitude:</b>
		<%= track.longitude %>
		<br/>
	</p> 
    <% end %>
	
</div>
