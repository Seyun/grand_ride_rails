<%= form_for(@ride) do |f| %>
<% if @ride.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@ride.errors.count, "error") %> prohibited this ride from being saved:</h2>

	<ul>
		<% @ride.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<p>
	<%= f.label :passenger_uuid %>
	<br />
	<%= f.text_field :passenger_uuid %>
</p>

<%= f.fields_for :ride_monitors do |builder| %>
<%= render "ride_monitor_fields", :f => builder %>
<% end %>
<p>
	<%= link_to_add_fields "Add Monitor", f, :ride_monitors %>
</p>
<p>
	<%= f.submit "Submit" %>
</p>
<% end %>
